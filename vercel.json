{
  "version": 2,
  "rewrites": [
    {
      "source": "/css/(.*)",
      "destination": "/mini-app/css/$1"
    },
    {
      "source": "/js/(.*)",
      "destination": "/mini-app/js/$1"
    },
    {
      "source": "/",
      "destination": "/mini-app/index.html"
    },
    {
      "source": "/(.*)",
      "destination": "/mini-app/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type"
        }
      ]
    }
  ]
}

