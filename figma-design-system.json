  "components": {
    "button": {
      "primary": {
        "backgroundColor": "#2980F2",
        "color": "#FFFFFF",
        "borderRadius": 12,
        "padding": "8px 16px",
        "fontSize": 14,
        "fontWeight": 600,
        "height": 36
      },
      "secondary": {
        "backgroundColor": "#F5F5F5",
        "color": "#000000",
        "borderRadius": 12,
        "padding": "8px 12px",
        "fontSize": 13,
        "fontWeight": 500
      }
    },
    "card": {
      "default": {
        "backgroundColor": "#FFFFFF",
        "borderRadius": 20,
        "padding": 18,
        "boxShadow": "none"
      },
      "lesson": {
        "backgroundColor": "#F1F2F4",
        "borderRadius": 10,
        "padding": "12px 16px",
        "marginBottom": 12
      },
      "event": {
        "backgroundColor": "#F1F2F4",
        "borderRadius": 10,
        "padding": "12px 16px",
        "display": "flex",
        "gap": 12
      }
    },
    "header": {
      "height": 56,
      "padding": "12px 16px",
      "backgroundColor": "#F5F5F5",
      "position": "sticky",
      "top": 0,
      "zIndex": 100
    },
    "bottomNavigation": {
      "height": 70,
      "backgroundColor": "#FFFFFF",
      "borderTop": "1px solid #E0E0E0",
      "paddingTop": 8,
      "paddingBottom": 12,
      "position": "fixed",
      "bottom": 0,
      "zIndex": 1000
    },
    "icon": {
      "size": {
        "small": 16,
        "medium": 24,
        "large": 40
      }
    }
  },
  "pages": {
    "main": {
      "name": "Главная",
      "path": "/",
      "components": [
        "Header с аватаркой",
        "Горизонтальный скролл новостей",
        "Секция Расписание с табами дат",
        "Карточки занятий",
        "Секция Ближайшие мероприятия",
        "Bottom Navigation"
      ]
    },
    "schedule": {
      "name": "Расписание",
      "path": "/schedule",
      "components": [
        "Header с кнопкой назад",
        "Навигация по неделям",
        "Выпадающий список недель",
        "Карточки дней недели",
        "Карточки занятий"
      ]
    },
    "events": {
      "name": "Мероприятия",
